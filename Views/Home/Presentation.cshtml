@{
    ViewData["Title"] = "Bienvenue sur MyFitness";
}
<div class="presentation-page">
    <section id="hero" class="hero-section">
        <div class="container text-center">
            <h1>Bienvenue sur <span>MyFitness</span></h1>
            <p>Suivez vos entraînements, gérez votre nutrition et atteignez vos objectifs de fitness.</p>
            <a href="/Account/Register" class="btn btn-primary btn-lg">Commencer</a>
        </div>
    </section>

    <section id="features" class="features-section">
        <div class="container">
            <h2>Fonctionnalités</h2>
            <div class="row">
                <div class="col-md-4 text-center">
                    <i class="bi bi-bar-chart-line"></i>
                    <h3>Suivi de Progression</h3>
                    <p>Visualisez votre parcours fitness avec un suivi détaillé.</p>
                </div>
                <div class="col-md-4 text-center">
                    <i class="bi bi-apple"></i>
                    <h3>Gestion de Nutrition</h3>
                    <p>Enregistrez et surveillez votre nutrition quotidienne pour atteindre vos objectifs santé.</p>
                </div>
                <div class="col-md-4 text-center">
                    <i class="bi bi-chat"></i>
                    <h3>Chat en Temps Réel</h3>
                    <p>Connectez-vous avec des coachs fitness et des amis en temps réel.</p>
                </div>
            </div>
        </div>
    </section>

    <section id="cta" class="cta-section">
        <div class="container text-center">
            <h2>Prêt pour une Transformation ?</h2>
            <p>Rejoignez notre communauté de passionnés de fitness et commencez votre parcours dès aujourd'hui.</p>
            <a href="/Account/Register" class="btn btn-secondary btn-lg">Rejoindre Maintenant</a>
        </div>
    </section>

    <footer class="footer-section text-center">
        <p>&copy; 2023 MyFitness. Tous droits réservés.</p>
    </footer>
</div>
