@{
    ViewData["Title"] = "Activités";
}

<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Activités</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        @@media (max-width: 576px) {
            .d-flex > * {
                flex: 1 1 100%;
                margin-bottom: 0.5rem;
            }

            .d-flex > button {
                flex: 0 0 auto;
            }
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1>Activités</h1>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#cardioModal">Ajouter Cardio</button>
        <button type="button" class="btn btn-secondary ml-2" data-toggle="modal" data-target="#strengthModal">Ajouter Force</button>
    </div>

    <div class="modal fade" id="cardioModal" tabindex="-1" role="dialog" aria-labelledby="cardioModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Cardio</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="type">Type</label>
                            <select id="type" class="form-control">
                                <option>Course</option>
                                <option>Cyclisme</option>
                                <option>Natation</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="date">Date</label>
                            <input type="date" id="date" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="duration">Durée (min)</label>
                            <input type="number" id="duration" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="distance">Distance (km)</label>
                            <input type="number" id="distance" class="form-control" step="0.1">
                        </div>
                        <div class="form-group">
                            <label for="intensity">Intensité</label>
                            <select id="intensity" class="form-control">
                                <option>Faible</option>
                                <option>Modérée</option>
                                <option>Élevée</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                    <button type="button" class="btn btn-primary">Enregistrer</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="strengthModal" tabindex="-1" role="dialog" aria-labelledby="strengthModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Force</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="exerciseType">Exercice</label>
                            <select id="exerciseType" class="form-control">
                                <option>Squat</option>
                                <option>Bench</option>
                                <option>Deadlift</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="dateStrength">Date</label>
                            <input type="date" id="dateStrength" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="notes">Notes</label>
                            <textarea id="notes" class="form-control" rows="2"></textarea>
                        </div>
                        <h5 class="mt-3">Séries</h5>
                        <div id="sets-table-body">
                            <div class="d-flex flex-column flex-md-row align-items-center mb-2">
                                <span class="mr-md-2"> 1</span>
                                <input type="number" class="form-control mr-md-2 mb-2 mb-md-0" placeholder="Poids (lb)">
                                <input type="number" class="form-control mr-md-2 mb-2 mb-md-0" placeholder="Répétitions">
                                <select class="form-control mr-md-2 mb-2 mb-md-0">
                                    <option>Faible</option>
                                    <option>Modérée</option>
                                    <option>Élevée</option>
                                </select>
                                <button type="button" class="btn btn-sm btn-danger">Supprimer</button>
                            </div>
                        </div>
                        <button type="button" id="add-set" class="btn btn-secondary btn-sm mt-2">Ajouter Série</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                    <button type="button" class="btn btn-primary">Enregistrer</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('add-set').addEventListener('click', function () {
            const setsTableBody = document.getElementById('sets-table-body');
            const setCount = setsTableBody.getElementsByClassName('d-flex').length + 1;
            const newSet = document.createElement('div');
            newSet.classList.add('d-flex', 'flex-column', 'flex-md-row', 'align-items-center', 'mb-2');
            newSet.innerHTML = `
                        <span class="mr-md-2"> ${setCount}</span>
                        <input type="number" class="form-control mr-md-2 mb-2 mb-md-0" placeholder="Poids (kg)">
                        <input type="number" class="form-control mr-md-2 mb-2 mb-md-0" placeholder="Répétitions">
                        <select class="form-control mr-md-2 mb-2 mb-md-0">
                            <option>Faible</option>
                            <option>Modérée</option>
                    <option>Élevée</option>
                </select>
                <button type="button" class="btn btn-sm btn-danger">Supprimer</button>
            `;
            setsTableBody.appendChild(newSet);
                newSet.querySelector('.btn-danger').addEventListener('click', function () {
                        newSet.remove();
                    });
                });
    </script>
</body>
</html>
